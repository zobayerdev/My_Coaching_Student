<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCoachingStudents" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.MyCoachingStudents" parent="Base.Theme.MyCoachingStudents" />


    <!--navigation menu font family-->
    <style name="NavigationMenuViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- ProgressBar Color. -->
    <style name="ProgressBar">
        <item name="colorSecondary">@color/black</item>
    </style>

    <!--Light mode-->
    <!--Screen background if light mode on-->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!--Screen background if light mode on-->
    <style name="SCREEN_IMPORTANT">
        <item name="android:background">#FFF</item>
    </style>

    <!--Texts background if light mode on-->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <!--button background if light mode on-->
    <style name="BUTTON">
        <item name="android:background">@color/apps_color</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>